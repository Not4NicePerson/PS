@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Scripts.Render("~/bundles/General")
</head>
<body>

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a href="@Url.Action("Index", "Manage")" class="navbar-brand">@Resources.SiteName</a>
			</div>

			<ul class="nav navbar-nav navbar-right">

				@RenderSection("Actions", false)

				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<i class="glyphicon glyphicon-collapse-down"></i>
						@Resources.Language
						<span class="caret"></span>
					</a>

					<ul class="dropdown-menu">
						<li>
							@Html.RouteLink("ru",
								new {action = "ChangeCulture", area = "", controller = "Filter", lang = "ru"})
						</li>
						<li>
							@Html.RouteLink("en",
								new {action = "ChangeCulture", area = "", controller = "Filter", lang = "en"})
						</li>
					</ul>
				</li>

				<li>
					<a href="@Url.Action("Logout", "Account")">
						<i class="glyphicon glyphicon-log-out"></i>
						@Resources.Logout
					</a>
				</li>

			</ul>

		</div>
	</nav>

	<div class="panel-body">
		<div class="row">
			<div class="col-xs-12 col-md-2">
				@Html.Partial("_NavigationLayout")
			</div>
			<div class="col-xs-12 col-md-10">
				@RenderBody()
			</div>
		</div>
	</div>

</body>
</html>

@RenderSection("Styles", false)
@RenderSection("Scripts", false)
@Styles.Render("~/bundles/General-css")
